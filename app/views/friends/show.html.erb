
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
    <p>
      <strong>Email:</strong>
      <%= @friend.email %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @friend.phone %>
    </p>

    <p>
      <strong>Twitter:</strong>
      <%= @friend.twitter %>
    </p>
    <div class="row">
      <div class="col w-50">
        <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-dark text-white btn-block" %>
      </div>
      <div class="col w-50">
        <%= link_to 'Back', friends_path, class:"btn btn-secondary text-white btn-block" %>
      </div>
    </div>

  </div>
</div>





 

